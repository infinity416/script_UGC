#Uso de pandas Input
doc = pd.read_excel('/home/arturo/Downloads/prb1.xlsx', sheet_name='DATA')
#Uso de Openpyxl Input 
workbook3 = openpyxl.load_workbook('/home/arturo/Downloads/prb1a.xlsx',  data_only=True)
h = workbook3.active
h = workbook3['DATA']
t1=h['B1'].value
t2=h['C1'].value
t3=h['D1'].value
t4=h['E1'].value
t5=h['F1'].value
t6=h['G1'].value
t7=h['H1'].value
t8=h['I1'].value
t9=h['J1'].value
t10=h['K1'].value
t11=h['L1'].value
t12=h['M1'].value
t13=h['N1'].value

for x in doc[t1].values:
    if x <= 2027:
        ind=doc[doc[t1] == x]
        ide=ind.index[0]
        xn=ide+2
